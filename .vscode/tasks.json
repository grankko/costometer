{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "args": [
                "build",
                "${workspaceRoot}/CostOMeter.sln"
            ],
            "type": "shell",
            "command": "dotnet",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        ,
        {
            "label": "copyTags",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "CostOMeter.Web\\wwwroot\\src\\tags",
                "CostOMeter.Web\\wwwroot\\out\\tags",
                "/s",
                "/y",
                "/I"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "buildTs",
            "command": "tsc",        
            "dependsOn": ["copyTags"],
            "type": "shell",        
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },        
            "args": ["-p", "CostOMeter.Web/tsconfig.json"],
            "problemMatcher": "$tsc"
        }
        ,
        {
            "label": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "command": "dotnet",
            "args": ["test", "CostOMeter.Web.Tests\\CostOMeter.Web.Tests.csproj"]
        }
    ]
}